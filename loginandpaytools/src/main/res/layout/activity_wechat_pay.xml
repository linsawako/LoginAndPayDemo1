<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wechat_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loginandpaytools.ui.wechatPay.WechatPayActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="150dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/com_sawako_paylibrary_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@color/toolbar_title"
            android:textSize="20sp"
            android:text="已支付"/>

        <Button
            android:id="@+id/com_sawako_paylibrary_topay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:background="@color/button_background"
            android:textSize="20sp"
            android:text="去支付"/>

    </LinearLayout>

</RelativeLayout>
