<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_list_layout"
    android:background="@drawable/com_sawako_paylibrary_fab_list_bg1"
    android:layout_width="170dp"
    android:layout_height="50dp"
    android:paddingLeft="10dp"
    android:visibility="invisible">

    <Button
        android:id="@+id/fab_back_btn"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/com_sawako_paylibrary_fab_back" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/fab_account_btn"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/com_sawako_paylibrary_fab_account" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户"
            android:textSize="11sp"
            android:textColor="@color/button_title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout1"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/fab_info_btn"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/com_sawako_paylibrary_fab_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="消息"
            android:textColor="@color/button_title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout2"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/fab_forum_btn"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/com_sawako_paylibrary_fab_forum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="论坛"
            android:textColor="@color/button_title"/>

    </LinearLayout>
</RelativeLayout>