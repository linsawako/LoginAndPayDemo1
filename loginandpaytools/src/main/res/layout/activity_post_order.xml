<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loginandpaytools.ui.postorder.PostOrderActivity">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/pay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pay_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/com_sawako_paylibrary_wechat"/>
        <Button
            android:id="@+id/pay_alipay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:background="@drawable/com_sawako_paylibrary_alipay"/>
    </LinearLayout>

</RelativeLayout>
